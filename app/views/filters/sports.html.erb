<div class="all-container">
  <% @spo_articles.each do |item| %>
      <div class="all-item">
        <div class="d-flex">
          <div>
            <h2><%= item.title %></h2>
          </div>
          <div class="d-flex">
            <p>Written by:</p>
            <h3><%= item.user.name %></h3>
          </div>
        </div>
        <div>
          <%= link_to 'READ MORE', article_path(item.id) %>
        </div>
      </div>
    <hr>
  <% end %>
</div>
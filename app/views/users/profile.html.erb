<div class="profile-container">
  <div class="profile-header">
    <%= current_user.name %>
  </div>
  <div class="all-container">
    <% @user_articles.each do |item| %>
        <div class="all-item">
          <div class="d-flex">
            <div>
              <h2><%= item.title %></h2>
            </div>
            <div class="d-flex">
              <p>Written by:</p>
              <h3><%= item.user.name %></h3>
            </div>
          </div>
          <div class="d-flex">
            <%= link_to 'READ MORE', article_path(item.id) %>
            <p>OR</p>
            <%= link_to 'EDIT', edit_article_path(item.id) %>
          </div>
        </div>
      <hr>
    <% end %>
  </div>
</div>